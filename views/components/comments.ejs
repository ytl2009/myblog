
<div class="ui grid">
  <div class="four wide column"></div>
  <div class="eight wide column">
    <div class="ui segment">
      <div class="ui minimal comments">
        <h3 class="ui dividing header">Leave Message</h3>
        <% comments.forEach(function(comment){ %>
          <div class="comment">
            <span class="avatar">
              <img src="/img/<%= comment.author.avatar %>">
            </span>
            <div class="content">
              <a class="author" href="/posts?author=<%= comment.author._id %>"><%= comment.author.name %></a>
              <div class="metadata">
                <span class="date"><%= comment.create_at %></span>
              </div>
              <div class="text"><%- comment.content %></div>

              <% if(user && comment.author._id.toString() === comment.author._id.toString()) { %>
                <div class="actions">
                  <a class="reply" href="/comments/<%= comment._id %>/remove">Delete</a>
                </div>

              <% } %>
            </div>
          </dvi>

        <% }) %>

        <% if(user) { %>
          <form class="ui reply form" method="post" action="/comment">
            <input name="postId" value="<%= post._id %>" hidden>
            <div class="field">
              <textarea name="content"></textarea>
            </div>
            <input type="submit" class="ui icon button" value="MSG"/>
          </form>

        <% } %>
      </div>
    </div>
  </div>
</div>
