
<%- include('header') %>

<div class="ui grid">
  <div class="four wide column">
    <a class="avatar avatar-link"
        href="/posts?author=<%= user._id %>"
        data-title="<%= user.name %> | <%= ({m: 'man',f:'female',x:'secret'})[user.gender] %>"
        data-content="<%= user.bio %>">
        <img class="avatar" src="/img/<%= user.avatar %>">
    </a>
  </div>

  <div class="eight wide column">
    <form class="ui form segment" method="post">
      <div class="field required">
        <label>title</label>
        <input type="text" name="title">
      </div>

      <div class="field required">
        <label>Content</label>
        <input type="text" name="content">
      </div>

      <input type="submit" class="ui button" value="publish">
    </form>

  </div>
</div>

<%- include('footer') %>
